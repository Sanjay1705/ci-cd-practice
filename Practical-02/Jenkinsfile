pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Test') {
      steps {
        sh '''
          python3 -m venv .venv
          . .venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt pytest
          pytest -q
        '''
      }
    }
    stage('Setup Python Env') {
      steps {
        sh '''
          sudo apt-get update
          sudo apt-get install -y python3.11-venv
        '''
      }
    }


    stage('Build Docker') {
      steps {
        sh 'docker build -t ci-web .'
      }
    }

    stage('Run & Health-check') {
      steps {
        sh '''
          docker run -d --name ci-web -p 5000:5000 ci-web
          sleep 2
          curl -s http://localhost:5000/health | python3 -c "import sys,json; j=json.load(sys.stdin); assert j.get('status')=='ok'"
        '''
      }
    }
  }

  post {
    always {
      sh 'docker ps -a | grep ci-web && docker stop ci-web && docker rm ci-web || true'
    }
  }
}